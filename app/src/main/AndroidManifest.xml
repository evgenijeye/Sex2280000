<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.exam">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Exam"
        android:usesCleartextTraffic="true">
        <activity android:name=".screens.MovieScreen.MovieScreen"></activity>
        <activity
            android:name=".screens.MainScreen.MainScreen"
            android:label="@string/title_activity_main_screen" />
        <activity android:name=".screens.SignUp.SignUpScreen" />
        <activity android:name=".screens.SignIn.SignInScreen" />
        <activity android:name=".screens.LaunchScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>